---
interface Props {
  header: string,
  descriptionI: string,
  descriptionII: string,
  slogan: string
}

const { header, descriptionI, descriptionII, slogan } = Astro.props;
---

<div class="flex flex-col w-[50rem] h-fit my-auto font-raleway  justify-center items-center text-center text-white">
  <p class="text-6xl font-extrabold mb-10">{header}</p>
  <p class="text-2xl font-light w-[30rem]">
    {descriptionI}
  </p>
  <p class="text-2xl font-semibold mb-10">
    {slogan}
  </p>
  <p class="text-2xl font-light">
    {descriptionII}
  </p> 
</div>

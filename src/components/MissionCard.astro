---
interface Props {
  header: string,
  descriptionI: string,
  descriptionII: string,
  slogan: string
}

const { header, descriptionI, descriptionII, slogan } = Astro.props;
---

<div class="flex flex-col w-screen lg:w-[50rem] h-fit my-auto font-raleway  justify-center items-center text-center text-white">
  <p class="lg:text-6xl md:text-5xl text-4xl font-extrabold mb-10">{header}</p>
  <p class="lg:text-2xl md:text-xl text-sm font-light w-screen lg:w-[30rem]">
    {descriptionI}
  </p>
  <p class="lg:text-2xl md:text-xl text-sm font-semibold mb-10">
    {slogan}
  </p>
  <p class="lg:text-2xl md:text-xl text-sm font-light">
    {descriptionII}
  </p> 
</div>

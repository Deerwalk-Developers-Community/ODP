---
import CornerLines from "../../public/images/cornerLines.astro"
import CornerLinesII from "../../public/images/cornerLinesII.astro"
---

<div class="bg-[url(../../../public/images/HeroBacground.png)] bg-no-repeat bg-cover lg:bg-none font-raleway font-extrabold w-screen lg:w-full flex flex-col justify-center items-start lg:pl-32 pl-12 relative h-full lg:text-8xl md:text-6xl text-6xl overflow-hidden bg-[#FFF6E8]">
    <div class="absolute inset-0 bg-[#D9D9D9] bg-opacity-60"></div>

    <div class="relative">
        <p class="text-[#085A34]">OUR</p>
        <p class="text-[#1C2D27]">DREAM,</p>
        <p class="text-[#085A34]">PASHUPATI</p>
        <p class="text-[#1C2D27]">CLEAN</p>
        <p class="text-[#085A34] text-2xl">Join us on our journey!</p>
    </div>

    <div class="absolute left-0 top-[-35px]">
        <CornerLines />
    </div>
</div>

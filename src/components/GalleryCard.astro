---
interface Props{
    header : string,
    description : string,
    slogan ?: string
}

const {header, description, slogan} = Astro.props
---

<div class="w-full h-fit flex flex-col gap-5 font-raleway text-white text-center justify-center items-center">
    <p class = "text-6xl font-extrabold mb-5">
        {header}
    </p>
    <p class="text-2xl font-thin w-[30rem]">
        {description}
    </p>
    <p class="text-2xl font-semibold">
        {slogan}
    </p>
</div>

